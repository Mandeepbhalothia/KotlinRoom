<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_name"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="@string/item_no"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/minusItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_minus"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toStartOf="@id/itemNo"
        app:layout_constraintTop_toBottomOf="@id/itemNo" />

    <ImageButton
        android:id="@+id/addItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_add"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/itemNo"
        app:layout_constraintTop_toBottomOf="@id/itemNo" />
    <ImageButton
        android:id="@+id/deleteItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/itemName"
        app:layout_constraintStart_toStartOf="@id/itemName"
        android:layout_marginStart="24dp"
        android:background="@drawable/ic_delete"
        android:contentDescription="@string/app_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>